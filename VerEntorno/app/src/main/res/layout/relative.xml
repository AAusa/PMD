<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/padre">

    <RelativeLayout
        android:id="@+id/hijo1"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:background="#FF9800">
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/hijo2"
        android:layout_width="200dp"
        android:layout_height="100dp"
        android:layout_alignParentTop="true"
        android:layout_toLeftOf="@+id/hijo1"
        android:background="#F44336">
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/hijo3"
        android:layout_width="match_parent"
        android:layout_height="343dp"
        android:layout_below="@+id/hijo2"
        android:layout_alignParentTop="true"
        android:layout_marginTop="99dp"
        android:background="#4CAF50"></RelativeLayout>

    <RelativeLayout
        android:id="@+id/hijo4"
        android:layout_width="187dp"
        android:layout_height="289dp"
        android:layout_below="@+id/hijo3"
        android:layout_alignParentTop="true"
        android:layout_marginTop="442dp"
        android:background="#3F51B5"></RelativeLayout>

    <RelativeLayout
        android:id="@+id/hijo5"
        android:layout_width="224dp"
        android:layout_height="289dp"
        android:layout_alignTop="@+id/hijo3"
        android:layout_alignParentTop="true"
        android:layout_marginTop="442dp"
        android:layout_toRightOf="@+id/hijo4"
        android:background="#FF9800"></RelativeLayout>
</RelativeLayout>